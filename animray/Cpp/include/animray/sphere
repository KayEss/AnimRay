#ifndef ANIMRAY_SPHERE_HPP
#define ANIMRAY_SPHERE_HPP
#pragma once


#include <animray/ray>
#include <animray/line>


namespace animray {


    /// A simple 3D unit sphere primitive at the origin.
    /// Its surface only occludes from the outside.
    template< typename D >
    class sphere {
        public:
            /// Check for equality
            bool operator == ( const sphere &r ) const {
                return true;
            }
            /// Check for inequality
            bool operator != ( const sphere &r ) const {
                return false;
            }

            /// Returns true if the line hits the sphere from the outside
            bool occludes( const ray< D > &by ) {
                // This algorithm has been adapted from 'An Introduction to Ray
                // Tracing' p39.
                line< D > oc( by.from(), homogeneous<D>() );
                D l2oc( oc.length_squared() );
                if ( l2oc <= 1 ) return false; // Starts inside the sphere
                D tca( ( oc.to() - oc.from() ).dot( by.direction().unit() ) );
                if ( tca < 0 ) return false; // Outside and points away
                return true;
            }
    };


}


#endif // ANIMRAY_SPHERE_HPP
