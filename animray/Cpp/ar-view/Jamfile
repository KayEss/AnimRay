import path ;


searched-lib opengl-glew ;
searched-lib opengl-glew : : <name>GLEW <target-os>linux ;

searched-lib gl ;
searched-lib gl : : <name>GL <target-os>linux ;

searched-lib glu ;
searched-lib glu : gl : <name>GLU <target-os>linux ;

searched-lib opengl-glut ;
searched-lib opengl-glut : glu : <name>glut <target-os>linux ;


fost-exe ar-view
    :
        ../animray-chatr
        [ path.glob $(TOP)/Cpp/ar-view : *.cpp ]
        opengl-glut
        opengl-glew
    ;
