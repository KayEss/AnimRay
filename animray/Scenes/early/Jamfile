include $(TOP)/../fost-base/fost.jam ;


rule scene ( name ) {
    lib $(name)-static-lib : $(name).cpp : <link>static ;
    unit-test $(name)-test
        :
            $(TARGET_INPUTS)
            $(TOP)/../fost-base/Cpp/fost-cli//fost-cli
            $(name)-static-lib
        :
            $(TARGET_REQUIREMENTS)
            <tag>@fost-tag-output
        ;
    fost-exe $(name) : $(name)-static-lib ;
}


fost-exe affine-transformations
    :
        affine-transformations.cpp
    ;

fost-exe coloured-matte-surfaces
    :
        coloured-matte-surfaces.cpp
    ;

fost-exe five-spheres-coloured-lights
    :
        five-spheres-coloured-lights.cpp
    ;

fost-exe reflections
    :
        reflections.cpp
    ;

fost-exe simple-specular-highlight
    :
        simple-specular-highlight.cpp
    ;

fost-exe spheres
    :
        spheres.cpp
    ;

fost-exe spheres-positionable
    :
        spheres-positionable.cpp
    ;

scene white-sphere ;
scene white-sphere-ortho ;
