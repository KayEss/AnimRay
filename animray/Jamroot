path-constant TOP : . ;
include $(TOP)/../boost-version.jam ;
include ../fost-base/fost.jam ;

use-project fost-base : ../fost-base/ ;
use-project fost-py : ../fost-py/ ;

fost-project animray :
        <include>../fost-py/Cpp/include
    ;


# An install rule for the Python libs
rule py-install ( pyd : location )
{
    install $(location) : $(pyd) : <location>$(TOP)/../dist/lib/python/site-packages/$(location) ;
}


alias animray :
        Cpp/animray-py
        Cpp/animray-test
        Python
    ;

alias docs :
        Docs
    ;
explicit docs ;

alias examples :
        Examples/landmaker
        Examples/mandelbrot
    ;
explicit examples ;

alias fost :
        ../fost-base//fost
        ../fost-py//fost
    ;
explicit fost ;

alias tests :
        ../fost-base//tests
        ../fost-py//fost
    ;
explicit tests ;

alias all :
        animray
        docs
        examples
        fost
        tests
    ;
explicit all ;
